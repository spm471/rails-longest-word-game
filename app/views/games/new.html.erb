<h1 class="title-design">New Game</h1>
<div><%@letters.each do |letter|%>
  <div class="box-design">
  <%=letter%>
  </div>
<%end%>

</div>

<h2 class="title-design">What is the longest word you can come up with?</h2>

<form action="/score" method="post" class="title-design">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="grid" value="<%= @letters.join %>">
  <input type="hidden" name="start_time" value="<%=@start_time%>">
  <input type="text" name="word" placeholder="Address">
  <input type="submit">
</form>
